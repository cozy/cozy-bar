.apps-menu-grid
    display: flex
    flex-wrap: wrap
    width: 100%
    box-sizing: border-box
    padding-left: 0.5rem
    padding-right: 0.5rem
  
.apps-menu-grid-item-wrapper
    width: 33%
    aspect-ratio: 1

.apps-menu-grid-item
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    text-decoration: none
    width: 60%
    min-width: 48px
